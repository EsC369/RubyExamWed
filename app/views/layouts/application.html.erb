<!DOCTYPE html>
<html>
<head>
  <title>LoginAndRegistration2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">
<% if current_user %>
  <a href="/logout" data-method="delete" style="float: left; margin-left: 10px; font-weight:bold; font-size:20px;">Logout</a>
<% end %>
<br>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
